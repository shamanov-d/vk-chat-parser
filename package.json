{
  "name": "vk-chat-parser",
  "version": "2022.1.1",
  "description": "получение участников беседы вк",
  "author": "shamanov-d",
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/smmwasted/your-repository.git"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./src/index.ts",
    "prettier:base": "prettier **/*.{ts,js,yml,yaml,json,md}",
    "lint:base": "yarn eslint --max-warnings 0 --format stylish \"src/**/*.ts\"",
    "all:check": "yarn lint:base && yarn prettier:base -c --debug-check",
    "all:format": "yarn lint:base --fix && yarn prettier:base --write",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "release": "release-tool release -gt",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@types/node": "^17.0.23",
    "@vk-io/authorization": "^1.3.0",
    "commander": "^9.1.0",
    "readline-sync": "^1.4.10",
    "vk-io": "^4.5.2"
  },
  "devDependencies": {
    "@smmwasted/release-tool": "2022.1.3",
    "@types/readline-sync": "^1.4.4",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-testing-library": "^3.9.2",
    "husky": "^7.0.2",
    "jest": "26.6.3",
    "lint-staged": "^11.1.2",
    "prettier": "^2.2.1",
    "ts-jest": "26.5.1",
    "ts-loader": "^6.2.1",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write",
      "eslint --max-warnings 0 --format stylish --fix"
    ],
    "**/*.{yml,yaml,json,md,js}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": true
      },
      "NODE_ENV": "test"
    },
    "testRegex": "/src/(?!e2e/).*\\.(test|spec).(ts)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.(js)$": "babel-jest"
    },
    "verbose": true,
    "testEnvironment": "node"
  }
}
